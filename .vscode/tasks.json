{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Smart Parking (Windows)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/SmartPark.exe",
                "-I${workspaceFolder}/include",
                "-IC:/SFML/include",
                "-LC:/SFML/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lgdi32",
                "-luser32",
                "-lkernel32",
                "-lcomctl32",
                "-lmsimg32",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Smart Parking (Linux)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/SmartPark",
                "-I${workspaceFolder}/include",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++17"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}